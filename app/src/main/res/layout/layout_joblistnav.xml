<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/relGenerate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_event_nav"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="4">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/btnMytickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/btnNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/poppinsregular"
                    android:maxLines="1"
                    android:text="New" />


                <!--            <View-->
                <!--                android:id="@+id/myTicketunderline"-->
                <!--                android:visibility="invisible"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="1dp"-->
                <!--                android:layout_margin="@dimen/_5sdp"-->
                <!--                android:background="@color/colorAccent"/>-->

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/btnMysearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/btnHidden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Hidden" />

                <!--            <View-->
                <!--                android:id="@+id/myEventsunderline"-->
                <!--                android:visibility="invisible"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="1dp"-->
                <!--                android:layout_margin="@dimen/_5sdp"-->
                <!--                android:background="@color/colorAccent"/>-->

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/btnFav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/btnAccepted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Accepted" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/btnSelling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/btnRejected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Rejected" />

            </androidx.appcompat.widget.LinearLayoutCompat>



        </androidx.appcompat.widget.LinearLayoutCompat>


        <LinearLayout
            android:id="@+id/underlineTab"
            android:layout_width="match_parent"
            android:layout_below="@+id/ll_event_nav"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">


            <View
                android:id="@+id/newU"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/yellow" />


            <View
                android:id="@+id/hiddenU"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:background="@color/yellow"/>


            <View
                android:id="@+id/acceptedU"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:visibility="invisible" />

            <View
                android:id="@+id/rejectedU"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:visibility="invisible" />



        </LinearLayout>






    </RelativeLayout>


</RelativeLayout>