<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_light"
        android:orientation="vertical"
        tools:context=".ui.fragment.EditTruckDetailsFragment">


        <LinearLayout
            android:id="@+id/lltopnav"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rlLogo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/rectengel"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:gravity="center"
                            android:src="@drawable/arrow_back"
                            android:textAllCaps="false"
                            app:tint="@color/white" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_weight="9"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Edit Truck Details"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />


                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="VIN Number"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/bluecolor"
                    android:textSize="@dimen/_14sdp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/border_shape1"
                    android:hint="99079686"
                    android:id="@+id/etVinNo"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Vehicle Registration Number"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/bluecolor"
                    android:textSize="@dimen/_14sdp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:id="@+id/etVeicleRegNo"
                    android:background="@drawable/border_shape1"
                    android:hint="V1234567"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Make"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/bluecolor"
                    android:textSize="@dimen/_14sdp"/>



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/border_shape1"
                    android:hint="Lorem"
                    android:id="@+id/etMake"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Body Style"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/bluecolor"
                    android:textSize="@dimen/_14sdp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/border_shape1"
                    android:hint="Lorem"
                    android:id="@+id/etBodyStyle"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Model"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/bluecolor"
                    android:textSize="@dimen/_14sdp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/border_shape1"
                    android:hint="Heavy Sid"
                    android:id="@+id/etModel"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Color"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/bluecolor"
                    android:textSize="@dimen/_14sdp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/border_shape1"
                    android:hint="Red"
                    android:imeOptions="actionNext"
                    android:id="@+id/etColor"
                    android:inputType="text"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Type"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/bluecolor"
                    android:textSize="@dimen/_14sdp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/border_shape1"
                    android:hint="Super Dump Truck (7 Axels, 25 Ton)"
                    android:imeOptions="actionNext"
                    android:id="@+id/etTruckType"
                    android:focusable="false"
                    android:enabled="false"
                    android:cursorVisible="false"
                    android:inputType="text"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/_12sdp" />




                <LinearLayout
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/etPass"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_65sdp"
                    android:background="@drawable/shape1"
                    android:backgroundTint="@color/yellow">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvloginwithphone"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppinssemibold"
                        android:text="NEXT"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />


                </LinearLayout>





            </LinearLayout>


        </ScrollView>



    </LinearLayout>
</layout>