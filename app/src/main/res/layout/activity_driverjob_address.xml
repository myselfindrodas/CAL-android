<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.DriverjobAddress">

        <include
            android:id="@+id/topnav"
            layout="@layout/topnav_layout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_below="@id/topnav">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:text="Login With Token"
                android:textColor="@color/cardview_dark_background"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvEnterphonenumer"
                android:layout_below="@+id/tvloginwithphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter the verification token code that sent \n to your number and email"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="VERIFICATION CODE"
                android:textSize="@dimen/_18sdp"/>


            <EditText
                android:id="@+id/etToken"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="0.4"
                android:layout_gravity="center"
                android:background="@drawable/border_shape1"
                android:paddingStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:hint="Enter your token"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/_12sdp" />


            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="0.4"
                android:layout_gravity="center"
                android:background="@drawable/border_shape1"
                android:paddingStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:hint="Enter new Password"
                android:layout_marginTop="@dimen/_8sdp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/_12sdp" />


            <EditText
                android:id="@+id/etConfPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="0.4"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/border_shape1"
                android:paddingStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:hint="Confirm your password"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/_12sdp" />



            <LinearLayout
                android:id="@+id/llContinue"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/primarycolor"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp">


                <TextView
                    android:layout_below="@+id/tvloginwithphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONTINUE"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textAlignment="center"/>


            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>
</layout>
