<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_280sdp"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_shape2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="#C4D9EB"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvuniqueid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="#CAL000123"
                    android:textColor="@color/bluecolor"
                    android:textSize="@dimen/_14sdp" />


                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:drawablePadding="@dimen/_7sdp"
                    android:drawableTint="#A2A2A2"
                    android:fontFamily="@font/poppinsregular"
                    android:text="2023-02-27"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_55sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/yellow">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppinsregular"
                            android:gravity="center"
                            android:text="A"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/tvpickupaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinsregular"
                    android:text="12 Holly Ln Rye NY 367-321, USA"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>


            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:rotation="90"
                android:src="@drawable/dotted" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_55sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#005DAA">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppinsregular"
                            android:gravity="center"
                            android:text="B"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/tvdropaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinsregular"
                    android:text="23 Ocean Brooklyn NY 32, USA"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@android:color/darker_gray"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_85sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.6">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Equipment:"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/bluecolor" />

                    <TextView
                        android:id="@+id/tvEquipment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem, Ipsum, Dolor"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_12sdp"/>




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Material:"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/bluecolor" />


                    <TextView
                        android:id="@+id/tvMaterial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem, Ipsum, Dolor"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_12sdp"/>






                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_85sdp"
                    android:background="#C4D9EB"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/Imgtruck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_truck"/>


                    <TextView
                        android:id="@+id/tvTruckname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Super Dump Truck (7 axels, 25 Ton)"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/bluecolor" />


                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:id="@+id/btnViewdetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="VIEW DETAILS"
                    android:fontFamily="@font/poppinsmedium"
                    android:background="#005DAA"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textAlignment="center"
                    android:gravity="center"/>


<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_weight="1"-->
<!--                    android:text="REJECT"-->
<!--                    android:fontFamily="@font/poppinsmedium"-->
<!--                    android:background="#C82C2C"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="@dimen/_14sdp"-->
<!--                    android:textAlignment="center"-->
<!--                    android:gravity="center"/>-->





            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>