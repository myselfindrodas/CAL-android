<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/btnDocupload">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_doc" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/poppinsregular"
                android:text="Document 1"
                android:textColor="@color/bluecolor"
                android:textSize="@dimen/_14sdp" />


            <LinearLayout
                android:id="@+id/llUploadeddoc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/border_shape1"
                android:backgroundTint="@color/yellow"
                android:layout_weight="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:text="UPLOADED"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/llUploaddoc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:visibility="gone"
                android:background="@drawable/border_shape4"
                android:layout_weight="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:text="UPLOAD"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/llApproved"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:text="APPROVED"
                    android:drawableLeft="@drawable/icon_check"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>








        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>